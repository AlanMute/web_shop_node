<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Онлайн магазин</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <header>
        <div class="catalog-info">
            <a href="/" class="main-text">Главная</a>
        </div>
        <div class="search-bar">
            <form method="get">
                <input type="text" name="search" placeholder="Поиск...">
                <button type="submit">Поиск</button>
            </form>
        </div>
        <div class="user-cart-info">
            <% if (user) { %>
                <button class="user-info">
                    <a href="/profile"><%= user.Login %></a>
                </button>
                <button class="cart">
                    <a href="/cart">Корзина: <%= cartCount %> товаров</a>
                </button>
            <% } else { %>
                <button class="user-info">
                    <a href="/login">Войти</a>
                </button>
            <% } %>
        </div>
    </header>

    <div class="products">
        <% if (products && products.length> 0) { %>
            <% products.forEach(product=> { %>
                <div class="product">
                    <img src="<%= product.Image %>" alt="<%= product.Name %>" title="<%= product.Description %>">
                    <h3>
                        <%= product.Name %>
                    </h3>
                    <p>Цена: <%= product.Price %> руб.</p>

                    <% if (product.Count> 0) { %>
                        <p>Осталось: <%= product.Count %> шт.</p>
                        <form name="add_to_cart_form">
                            <input type="hidden" name="product_id" value="<%= product.ProductID %>">
                            <input type="number" name="quantity" class="status" value="1" min="1" max="<%= product.Count %>" inputmode="numeric" pattern="[0-9]*"><br>
                            <button type="submit" class="add_to_cart_pr" name="add_to_cart">Добавить в корзину</button>
                        </form>
                        <% } else { %>
                            <p><strong>НЕТ В НАЛИЧИИ</strong></p>
                            <% } %>
                </div>
                <% }); %>
                    <% } else { %>
                        <h1>Ничего нет :(</h1>
                        <% } %>
    </div>

    <script src="/js/main.js"></script>
</body>

</html>